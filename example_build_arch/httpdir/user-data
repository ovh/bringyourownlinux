#cloud-config
users:
  - name: packer
    plain_text_passwd: packer
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: wheel
    shell: /bin/bash
    lock_passwd: false

# Ensure SSH is enabled and started
runcmd:
  - systemctl enable sshd
  - systemctl start sshd

# Network configuration
bootcmd:
  - dhclient || dhcpcd
